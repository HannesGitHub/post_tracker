<div class="bg-container">
  <div class="signup-card">
    <%= form_for @user, url: '/authenticate' do |u| %>
        <!--Email-->
        <label class="<%= error_class(@user.errors.messages[:email]) %>">Email</label>
        <%= error_message(@user.errors.messages[:email]) %>
        <%= u.text_field :email, placeholder: 'Enter email address' %>

        <!--Password-->
        <label class="<%= error_class(@user.errors.messages[:password]) %>">Password</label>
        <%= error_message(@user.errors.messages[:password]) %>
        <%= u.text_field :password, placeholder: 'Enter password' %>

        <button type="submit" class="btn btn-block btn-success">Sign in</button>
    <% end %>
  </div>
</div>

<%= stylesheet_link_tag 'logged_out' %>
<%= stylesheet_link_tag 'sign_in' %>